<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_start_async"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开启同步任务" />

    <Button
        android:id="@+id/btn_start_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开启进度框同步任务" />

    <Button
        android:id="@+id/btn_start_download2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开启下载任务" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_download_start"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:background="@drawable/zhanting" />

        <Button
            android:id="@+id/btn_download_pause"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:background="@drawable/bofan" />

        <Button
            android:id="@+id/btn_download_cancel"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:background="@drawable/quxiao" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="下载进度：" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

</LinearLayout>